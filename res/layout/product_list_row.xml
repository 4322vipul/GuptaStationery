<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="#dcf8c6"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="Pensil color(medium)"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/list_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/shopPrice"
        android:layout_toRightOf="@+id/icon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#3399FF"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/shopPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/icon"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:paddingRight="10dp"
        android:textColor="#3399FF"
        android:textSize="16sp" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Remove"
        android:id="@+id/removeButton"
        android:layout_alignTop="@+id/shopPrice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/color_button"
        android:textColor="@android:color/white"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Add"
        android:id="@+id/addButton"
        android:layout_marginTop="10dp"
        android:background="@drawable/color_button"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/removeButton"
        android:layout_alignStart="@+id/removeButton" />

</RelativeLayout>

