<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aimheadshot.piotrekj.shopppingproject.CreateAccountActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/createAccountButtonId"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:text="Create Account"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/cardVV"
            android:layout_width="350dp"
            android:layout_height="400dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#dcf8c6"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/profilePicId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profilepic"
                    android:tint="#00E4D7D7" />

                <EditText
                    android:id="@+id/emailIdEditTextId"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilePicId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:ems="10"
                    android:hint="E-mail Id"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text_outline"
                    android:padding="10dp"
                    android:text="" />

                <EditText
                    android:id="@+id/passwordEditTextId"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailIdEditTextId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/edit_text_outline"
                    android:ems="10"
                    android:hint="New Password (6 digits)"
                    android:inputType="numberPassword"

                    android:padding="10dp"
                    android:text="" />

                <EditText
                    android:id="@+id/firstNameEditTextId"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/passwordEditTextId"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/edit_text_outline"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/lastNameEditTextId"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/firstNameEditTextId"
                    android:layout_alignBottom="@+id/firstNameEditTextId"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="19dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/edit_text_outline"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

