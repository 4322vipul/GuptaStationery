<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aimheadshot.guptastationery">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/stationery"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.aimheadshot.piotrekj.shopppingproject.Help_Activity"
            android:label="Help">
        </activity>
        <activity
            android:name="com.aimheadshot.piotrekj.shopppingproject.Login_Activity"
            android:label="Gupta Stationery">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aimheadshot.piotrekj.shopppingproject.Storage$BasketActivity"
            android:label="Your basket"
            android:parentActivityName="com.aimheadshot.piotrekj.shopppingproject.MainActivity" />
        <activity
            android:name="com.aimheadshot.piotrekj.shopppingproject.ProductListActivity"
            android:label="List of products"
            android:parentActivityName="com.aimheadshot.piotrekj.shopppingproject.MainActivity" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity
            android:name="com.aimheadshot.piotrekj.shopppingproject.CreateAccountActivity"
            android:label="Create Account" />
        <activity
            android:name="com.aimheadshot.piotrekj.shopppingproject.MainActivity"
            android:label="Gupta Stationery" />
        <activity
            android:name="com.aimheadshot.piotrekj.shopppingproject.final_order_activity"
            android:label="Checkout Summary"></activity>
    </application>

</manifest>